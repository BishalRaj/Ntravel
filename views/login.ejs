<section class="p-5 sm-p-5" style="padding-top: 100px !important;">
  <center>
    <div class="row p-3 m-auto" style="max-width: 540px;">
      <div class="col-md-12 mt-5">
        <div class="card card-body">
          <h5 class="card-title">Login</h5>
          <form class="card-text" action="/login" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="email"
                class="form-control"
                placeholder="Enter your email"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Enter your password"
              />
            </div>
            <button class="btn btn-success btn-block" type="submit">
              Continue
            </button>
          </form>
          <span>or</span>
          <div style="height: 50px;">
            <form action="/google" class="w-100">
              <button class="btn p-0 m-0" type="submit" style="width: 10%;">
                <img src="/img/google.png" alt="" class="img-fluid" />
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </center>
</section>
